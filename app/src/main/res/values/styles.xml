<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorVerdeAbeto</item>
        <item name="colorPrimaryDark">@color/colorVerde</item>
        <item name="colorAccent">@color/colorVerdeAbeto</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppThemeLogin.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppThemeLogin.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="AppThemePerfil" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAzul</item>
        <item name="colorPrimaryDark">@color/colorAzulRey</item>
        <item name="colorAccent">@color/colorAzul</item>
    </style>
    <style name="AppThemePerfil.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppThemePerfil.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>